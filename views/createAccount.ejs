<%- include('header') %>
<div class="content">
    <h1>Create an Account</h1>
    <form id="create-account-form" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required>
        <p class="description"><em>Username can contain letters and digits only.</em></p>

        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <p class="description"><em>Password must be at least 4 characters long, contain only letters and digits, and contain at least one letter and at least one digit.</em></p>

        <input type="submit" value="Create Account">
        <div id="error-message" style="color: red;"></div>
    </form>
</div>
<%- include('footer') %>
<script src="/scripts/createAccountScript.js"></script>